{
  "name": "solcre/solcre-framework-2",
  "description": "Base stuff of many internal projects",
  "keywords": [
    "solcre",
    "framework"
  ],
  "license": "BSD-3-Clause",
  "require": {
    "php": "^8.2",
    "doctrine/doctrine-orm-module": "^6.0",
    "laminas-api-tools/api-tools-hal": "^1.10",
    "laminas-api-tools/api-tools-rest": "^1.8",
    "neitanod/forceutf8": "^2.0",
    "symfony/console": "^6.3",
    "psr/log": "^2.0"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "phpunit/phpunit": "^9.2"
  },
  "autoload": {
    "psr-4": {
      "Solcre\\SolcreFramework2\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SolcreFrameworkTest\\": "./test/"
    }
  },
  "scripts": {
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test": "phpunit"
  }
}
